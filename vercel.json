{
  "version": 2,
  "public": false,
  "buildCommand": "npm run build",
  "headers": [
    {
      "source": "/api/public/register",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/api/auth/register",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/public/register", "destination": "/api/public/register" },
    { "source": "/api/auth/register", "destination": "/api/auth/register" },
    { "source": "/api/auth/(.*)", "destination": "/api/auth/$1" },
    { "source": "/login", "destination": "/login" },
    { "source": "/register", "destination": "/register" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
} 